{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Next.js app",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"build"
			],
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Install PDF generation deps",
			"type": "shell",
			"command": "npm",
			"args": [
				"i",
				"pdfkit",
				"@types/pdfkit"
			],
			"problemMatcher": [],
			"group": "build"
		}
	]
}